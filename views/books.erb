<div class="row">
  <div class="">
    <form action="/admin/books" method="post">
      <div class="col-md-12">
        <div class="form-group">
          <label for="name">Add Book</label>
          <input id="name" name="name" class="form-control" type="text">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-8">
    <h2>Book List</h2>
    <% if @books.any? %>
      <ul>
        <% @books.each() do | book | %>
          <li>
            <div class="row">
              <div class="col-md-3">
                <%= book.name %>
              </div>
              <form action="/admin/books/<%= book.id %>/edit">
                <div class="col-md-1">
                  <button type="submit" id="edit-btn" class="btn btn-sm btn-primary">Edit</button>
                </div>
              </form>
              <form action="/admin/books/<%= book.id %>/delete" method="post">
                <div class="col-md-1">
                  <input name="_method" type="hidden" value="delete">
                  <button type="submit" id="del-btn" class="btn btn-sm btn-danger">Delete</button>
                </div>
              </form>
            </div>
          </li>
        <% end %>
      </u>
    <% end %>
  </div>
</div>
