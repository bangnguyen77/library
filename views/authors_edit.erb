<div class="row">
  <div class="col-md-6">
    <h2>Edit <%= @author.name %></h2>
    <form action="/admin/authors/<%= @author.id %>/edit" method="post">
      <div class="col-md-12">
        <div class="form-group">
          <label for="name">New name:</label>
          <input name="_method" type="hidden" value="patch">
          <input id="name" name="name" class="form-control" type="text" value="<%= @author.name %>">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Add Author to a Book</h3>
    <% if @books.any? %>
    <form class="form-horizontal" action="/admin/books/authors/add/<%= @author.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <select name="book" class="form-control">
        <option value="0">Select a book</option>
        <% @books.each() do | book | %>
        <option value="<%= book.id %>"><%= book.name %></optional>
        <% end %>
      </select>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
  <% if @author.books.any? %>
    <ul>
      <% @author.books.each do | author_book | %>
      <li><%= author_book.name %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
</div>
